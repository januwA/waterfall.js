{
	"compilerOptions": {
		"baseUrl": "./src/",
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "commonjs",
		"target": "es6",
		"strict": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"sourceMap": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"lib": [
			"es6",
			"dom"
		]
	},
	"exclude": [
		"node_modules",
		"dist"
	]
}